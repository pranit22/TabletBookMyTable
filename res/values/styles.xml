<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_button_tablet">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">500dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="order_button_tablet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="checkout_button_tablet">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">400dp</item>
    </style>

    <style name="pay_button_tablet">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">500dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="big_button">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="food_item">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">267dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="subMenuGrid">
        <item name="android:columnOrderPreserved">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="place_order">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="place_order_item_name" parent="place_order">
        <item name="android:layout_width">300dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="place_order_item_rate" parent="place_order">
        <item name="android:layout_width">120dp</item>
    </style>
    <style name="place_order_item_count" parent="place_order">
        <item name="android:layout_width">80dp</item>
    </style>
    <style name="place_order_item_total" parent="place_order">
        <item name="android:layout_width">120dp</item>
    </style>

    <color name="tap_color">#f5f5f5</color>
    <color name="off_white_color">#eeeeee</color>
    <color name="off_black_color">#333333</color>
    <color name="off_black_color_transparent">#cc333333</color>

    <style name="button_background">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/off_black_color_transparent</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
