<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".PaymentActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:rowCount="3"
                android:columnCount="3"
                style="@style/subMenuGrid">

                <TextView
                    android:contentDescription="@string/pay_now"
                    android:background="@drawable/alfredopasta"
                    style="@style/food_item"
                    android:onClick="onalfredopasta" />


                <TextView
                    android:contentDescription="@string/pay_now"
                    android:background="@drawable/burgers"
                    style="@style/food_item"
                    android:onClick="onburgers" />

                <TextView
                    android:contentDescription="@string/pay_now"
                    android:background="@drawable/butterchicken"
                    style="@style/food_item"
                    android:clickable="true" />

                <TextView
                    android:background="@drawable/chillinoodles"
                    android:contentDescription="@string/pay_now"
                    style="@style/food_item"
                    android:onClick="onchillinoodles" />

                <TextView
                    android:background="@drawable/indianthali"
                    android:contentDescription="@string/pay_now"
                    style="@style/food_item"
                    android:onClick="onindianthali" />

                <TextView
                    android:background="@drawable/lobsters"
                    android:contentDescription="@string/pay_now"
                    style="@style/food_item"
                    android:onClick="onlobsters" />

                <TextView
                    android:background="@drawable/mashroomcurry"
                    android:contentDescription="@string/pay_now"
                    style="@style/food_item"
                    android:onClick="onmashroomcurry" />


                <TextView
                    android:background="@drawable/prawns"
                    android:contentDescription="@string/pay_now"
                    android:onClick="onprawns"
                    style="@style/food_item" />

                <TextView
                    android:background="@drawable/steak"
                    android:contentDescription="@string/pay_now"
                    android:onClick="onsteak"
                    style="@style/food_item" />


            </GridLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

